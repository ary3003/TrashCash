<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg3blur"

    tools:context="com.in.trashcash.activity.RegisterActivity">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/t"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"/>




                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="50dp"
                    android:alpha="0.4"
                    android:textColorHint="@color/colorAppBack"
                    android:maxLines="1"
                    android:textColor="@color/colorAppBack"
                    android:singleLine="true" />





                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:textColorHint="@color/colorAppBack"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:imeActionId="@+id/login"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:textColor="@color/colorAppBack"
                    android:maxLines="1"
                    android:alpha="0.4"
                    android:singleLine="true" />




                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"


                    android:textColorHint="@color/colorAppBack"
                    android:imeActionId="@+id/login"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:textColor="@color/colorAppBack"
                    android:maxLines="1"
                    android:alpha="0.4"
                    android:singleLine="true" />





            <Button
                android:background="@drawable/button_capsule"
                android:id="@+id/email_sign_in_button"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:text="Register"
                android:textColor="@color/colorAppBack"
                android:textAllCaps="false"

                />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_chevron_right_black_24dp"

         />

</LinearLayout>



